<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'bp/screen' %>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'jquery-1.3.2', 'ui/jquery-ui-1.7.1.custom', 'application' %>
    <%= stylesheet_link_tag 'themes/smoothness/jquery-ui-1.7.1.custom' %>
    <%= yield(:head) %>
  </head>
  <body class="container">
    <div class="container">
      <div id="header" class="span-23">
        <a class="logo" href="<%= root_path %>">Tasking</a>
      </div>
      <div id="main" class="column span-18">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>
      
      <%= yield %>
      </div>
      <div id="sidebar" class="column span-6 last">
        This will be the side bar
      </div>
      <div id="footer" class="column span-24">
        This will be the footer
      </div>
    </div>
  </body>
</html>
